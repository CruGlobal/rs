source 'http://rubygems.org'

gem 'rails', '~>3.2.6'
gem 'airbrake'
gem 'mysql2'
gem 'jquery-rails'
gem 'barista'
gem 'json'
gem 'coffee-rails', '~> 3.2.1'

group :assets do
	# OS is responsible for provided JS compiler
	# don't get tangled up in JS compliler gems
  gem 'coffee-rails', '~> 3.2.1'
  gem 'sass-rails',   '~> 3.2.3'
  gem 'uglifier', '>= 1.0.3'
end

group :development do
	# gem 'debugger'  
	gem 'rspec'
	gem 'rspec-rails'
end
